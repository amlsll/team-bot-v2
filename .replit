modules = ["python-3.11"]

[env]
VIRTUAL_ENV = "/home/runner/${REPL_SLUG}/venv"
PATH = "${VIRTUAL_ENV}/bin"
PYTHONPATH = "${VIRTUAL_ENV}/lib/python3.11/site-packages"

[gitHubImport]
requiredFiles = [".replit", "requirements.txt"]

[deployment]
run = ["sh", "-c", "python replit_start.py"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 36559
externalPort = 3000

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[agent]
expertMode = true

[nix]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot"

[[workflows.workflow]]
name = "Telegram Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python replit_start.py"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"
