# Токен Telegram бота (получить у @BotFather)
# Пример: 123456789:AAA-BBB-CCC-DDD-EEE
BOT_TOKEN=your_bot_token_here

# Администраторы: tg_id через запятую, можно оставить пустым
# Пример: 123456789,987654321
ADMINS=

# Одноразовый код для выдачи прав администратора
# Используйте надежный пароль или генерируйте случайную строку
# Пример: super_secret_admin_code_2024
ADMIN_CODE=your_admin_code_here

# Базовый размер команды (по умолчанию 5)
TEAM_BASE=5

# Максимальное количество дополнительных участников в команде (по умолчанию 2)
ELASTIC_MAX=2

# ID группы/канала для отправки репортов от пользователей (опционально)
MOD_CHAT_ID=

# Использовать webhook вместо long polling (по умолчанию false)
USE_WEBHOOK=false

# URL для webhook (обязательно при USE_WEBHOOK=true)
WEBHOOK_URL=

# Порт для webhook сервера (по умолчанию 3000)
PORT=3000

# === НАСТРОЙКИ АВТООБНОВЛЕНИЯ ===

# Включить автоматическое обновление из GitHub (по умолчанию false)
AUTO_UPDATE_ENABLED=false

# Ветка для автоматического обновления (по умолчанию main)
UPDATE_BRANCH=main

# Секретный ключ для проверки GitHub webhook (рекомендуется)
# Используйте длинную случайную строку для безопасности
# Пример: your_github_webhook_secret_key_here
GITHUB_WEBHOOK_SECRET=
